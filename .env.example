# ============================================
# MedScribe Environment Variables
# Laptop-Only Configuration (RTX 4070 8GB)
# ============================================

# HuggingFace Access (REQUIRED)
HF_TOKEN=your_token_here_get_from_huggingface_settings

# Model Configuration
MEDASR_MODEL=google/medasr
MEDGEMMA_MODEL=google/medgemma-4b-it
USE_4BIT_QUANTIZATION=true

# Training Configuration (Laptop-Optimized)
BATCH_SIZE=2
GRADIENT_ACCUMULATION_STEPS=16
LEARNING_RATE=2e-4
LORA_RANK=16
LORA_ALPHA=16
NUM_EPOCHS=3

# Inference Configuration
MAX_NEW_TOKENS=512
TEMPERATURE=0.7
TOP_P=0.9

# Hardware
DEVICE=cuda
CUDA_VISIBLE_DEVICES=0
MAX_MEMORY_GB=7  # Reserve 1GB for system

# Paths
MODEL_CACHE_DIR=./models/cache
CHECKPOINT_DIR=./models/checkpoints
DATA_DIR=./data
TRAINING_DATA=./data/processed/train.jsonl
VALIDATION_DATA=./data/processed/val.jsonl

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
GRADIO_PORT=7860
GRADIO_SHARE=false

# Audio Processing
SAMPLE_RATE=16000
AUDIO_MAX_DURATION=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/medscribe.log
TENSORBOARD_DIR=./logs/tensorboard

# Wandb (Optional - set WANDB_DISABLED=true to skip)
WANDB_PROJECT=medscribe
WANDB_ENTITY=your_username
WANDB_DISABLED=false

# Development
DEBUG=false
VERBOSE=true